#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "bitwarden-cli"
     "curl"
     "exa"
     "gh"
     "jq"
     "ripgrep"
     "starship" -}}
{{ $casks := list
     "alacritty"
     "font-fira-code-nerd-font"
     "google-chrome"
     "firefox"
     "fork"
     "git-credential-manager-core"
     "hiddenbar"
     "itsycal"
     "visual-studio-code"
     "rectangle"
     "the-unarchiver"
     "vlc" -}}

{{ if .personal -}}
{{   $brews = concat $brews (list
       "go"
       "rust") -}}
{{   $casks = concat $casks (list
       "gog-galaxy"
       "ledger-live"
       "steam"
       "transmission") -}}
{{ end -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
